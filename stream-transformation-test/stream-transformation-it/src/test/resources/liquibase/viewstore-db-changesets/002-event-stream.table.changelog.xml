<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="event-store-002" author="TechPod"
               logicalFilePath="002-event-stream.table.changelog.xml">

        <createSequence incrementBy="1"
                        cycle="false"
                        sequenceName="event_stream_seq"
                        startValue="1"/>


        <createTable tableName="event_stream">

            <column name="stream_id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="sequence_number" type="BIGINT"
                    defaultValueSequenceNext="event_stream_seq">
                <constraints unique="true" nullable="false"/>
            </column>


            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="true"/>

            </column>

        </createTable>

    </changeSet>
</databaseChangeLog>